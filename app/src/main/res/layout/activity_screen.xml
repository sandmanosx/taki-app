<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="#fff"
                android:text="Movies"
                android:textColor="#000"
                android:textSize="17sp" />

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp"
            android:background="#f1f1f1"
            android:paddingRight="10dp">


            <LinearLayout
                android:id="@+id/covers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingRight="5dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/dir_1"
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:background="#f1f1f1"
                    android:src="@mipmap/ic_launcher"
                    android:gravity="center"/>

            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:id="@+id/today"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="4dp"
                android:background="@color/date"
                android:text="Today"
                android:textColor="#000"
                android:textSize="12sp" />
            <Button
                android:id="@+id/tomorrow"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/today"
                android:background="@color/grey"
                android:text="Tomorrow"
                android:textColor="#000"
                android:textSize="12sp" />

            <Button
                android:onClick="date_picker"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#f1f1f1"
                android:layout_marginRight="20dp"
                android:text="DATE"
                android:textColor="#000"
                android:textSize="12sp" />

        </RelativeLayout>





        <ScrollView
            android:id="@+id/screen_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="1dp"
            tools:context=".FilmActivity">
            <LinearLayout
                android:id="@+id/screens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".FilmActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#000000"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:background="#ECECEC"
                        android:text="Time"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="265dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:padding="8dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/fB0"
                            android:layout_weight="8"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="details"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/date_picker"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_gravity="center_horizontal"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_marginTop="-340dp">

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

            </DatePicker>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4A5BB5"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cinema"
            android:layout_width="94dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:text="Cinema"/>
        <Button
            android:id="@+id/search"
            android:layout_marginLeft="4dp"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="search"/>

        <Button
            android:id="@+id/screen"
            android:layout_marginLeft="4dp"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="screen"/>

        <Button
            android:id="@+id/user"
            android:layout_width="94dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:text="User"/>

    </LinearLayout>

</LinearLayout>




